<h2>Books</h2>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
<% @books.each do |book| %>
  <tbody>
    <tr>
      <td class="book-title">
       <%= book.title %>
      </td>
      <td class="book-body">
       <%= book.body %>
      </td>
      <td class="book-link">
        <%= link_to "Show", book_path(book.id) %>
      
        <%= link_to "Edit", edit_book_path(book.id) %>
      
        <%= link_to "Destroy", book_path(book.id), method: :delete, "date-confirm" => "本当に削除しますか？" %>
      </td>
    </tr>
  </tbody>
<% end %>
</table>


<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h5>Title</h5>
  <div class="field">
    <%= f.text_field :title %>
  </div>
  

  <h5>Body</h5>
  <div class="field">
    <%= f.text_area :body%>
  </div>
  
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
  

<% end %>
